{
	"manifest_version": 2,
	"name": "Emoji to English",
	"version": "3",
	"description": "Translates emojis to their Unicode names",
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": [
				"constants.js",
				"styler.js",
				"names-dict.js", 
				"ignore-sets.js", 
				"emoji-replacer.js", 
				"dom-manipulator.js",
				"orchestrator.js" 
			],
			"css": ["emoji-to-english.css"]
		}
	],
	"background": {
		"scripts": [
			"constants.js",
			"settings-migrator.js",
			"settings-manager.js"
		],
		"persistent": false
	},
	"applications": {
		"gecko": {
			"id": "emojisToEnglish@szupie"
		}
	},
	"options_ui": {
		"page": "settings-panel/settings.html"
	},
	"permissions": ["storage"],
	"default_locale": "en"
}
